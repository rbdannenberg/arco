class File_play_record:
    var fply, frec

    def init():
        fply = fileplay("./testinput.wav", 1)
        frec = filerec("./testoutput.wav", fply, 1)
        fply.atend(FINISH, this)
        fply.go()
        frec.run()
        frec.go()

    def finish(optional status, finisher, parameters):
    # stop recording and clean up
        print "File_play_record.finish called via .atend() processing"
        frec.stop()
        frec.unrun()
        frec = nil
        fply = nil
        file_play_record_inst = nil  // allow it to be GC'd


