def supersaw_example()
    var score = Score()
    if BEGINNING_NOTES:
        score.append(Note(0, pC3, 80, 3, n = SSEN, detune = 0.3,
                      attack = 0.4, decay = 0.5))
        score.append_rest(1)
        score.append(Note(0, pD3, 80, 3, n = SSEN, detune = 0.3,
                      attack = 0.4, decay = 0.5, lfofreq = 5, lfodepth = 0.25))
        score.append_rest(1)
        score.append(Note(0, pE3, 80, 3, n = SSEN, detune = 1.0, 
                      width = 0.2, chans = 2, attack = 0.4, decay = 0.5))
        score.append_rest(1)
        score.append(Note(0, pF3, 80, 3, n = SSEN, detune = 1.0,
                      attack = 0.4, decay = 0.5, chans = 2))
    score.append_rest(1)
    score.append(supersaw_example_seq(SSEANI, 1, 12))
    score.append_rest(1)
    // score.append(Score_action('ugen_trace'))
    score.append(supersaw_example_seq(0, 0, 100))  // higher cutoff
    print "-----"
    score.show()
    print "-----"
    score


